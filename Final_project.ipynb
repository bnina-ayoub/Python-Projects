        "t=int(input('Enter the length of countdown in seconds: '))\n",
        "def countdown(t):\n",
        "  timeformat=divmod(t,60)\n",
        "  while t!=0:\n",
        "    timeformat=divmod(t,60)\n",
        "    print(timeformat, end='\\r')    \n",
        "    time.sleep(1)\n",
